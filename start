#!/bin/bash
# 启动code-server并确保与Manim环境变量兼容
export PATH="/home/${NB_USER}/.local/bin:$PATH"
export PYTHONPATH="/home/${NB_USER}/.local/lib/python3.10/site-packages:$PYTHONPATH"

# 启动VS Code服务器，增加超时设置解决大型渲染问题
code-server \
  --bind-addr 0.0.0.0:8888 \
  --auth none \
  --disable-telemetry \
  --extensions-dir /home/${NB_USER}/.vscode/extensions \
  --timeout 300
